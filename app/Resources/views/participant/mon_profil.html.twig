{% extends 'layout_pure.html.twig' %}

{% block maincontent %}

    <form method="post" class="pure-form pure-g">
        <div class="pure-u-lg-1-3">
            <img src="{{ asset('img/mon_profil2.jpg') }}" class="pure-img" alt="mon profil">

        </div>

        <div class="pure-u-lg-1-3">
            <img src="{{ asset('img/mon_profil.jpg') }}" class="pure-img" alt="mon profil" id="mon-profil">
            <br><br>
            <div class="pure-form pure-form-aligned">
                <div class="pure-control-group">
                    <label for="staticPseudo">Pseudo : </label>
                    <input type="text" id="staticPseudo" value="{{ app.user.pseudo }}">
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Prénom : </label>
                    <input type="text" id="staticPseudo" value="{{ app.user.prenom }}">
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Nom : </label>
                    <input type="text" id="staticPseudo" value="{{ app.user.nom }}">
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Téléphone : </label>
                    <input type="text" id="staticPseudo" value="{{ app.user.telephone }}">
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Email : </label>
                    <input type="text" id="staticPseudo" value="{{ app.user.mail }}">
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Mot de passe : </label>
                    <input type="text" id="staticPseudo" value="">
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Confirmation : </label>
                    <input type="text" id="staticPseudo" value="">
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Ville de rattachement : </label>
                    <input type="text" id="staticPseudo" value="{{ app.user.site }}">
                </div>
                <div class="pure-u-lg-1-2">
                    {{ form_row(form.enregistrer, {'attr' : {'class' : 'pure-button pure-button-primary'}}) }}
                    <br><br>
                </div>
                <div class="pure-u-lg-1-2">
                    <a href="{{ path('sortie_liste') }}" class="pure-button pure-button-primary">Annuler</a>

                </div>
            </div>
        </div>


    </form>


{% endblock %}