{% extends 'layout_pure.html.twig' %}

{% block maincontent %}


    <form method="post" class="pure-form pure-g">
        <div class="pure-u-lg-1-3">
            <img src="{{ asset('img/mon_profil2.jpg') }}" class="pure-img" alt="mon profil">

        </div>

        <div class="pure-u-lg-1-3">
            <h1>{{ participant.pseudo }}</h1>
            <br><br>
            <div class="pure-form pure-form-aligned">

                <div class="pure-control-group">
                    <label for="staticPseudo">Prénom : </label>
                    <input type="text" id="staticPseudo" value="{{ participant.prenom }}" readonly>
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Nom : </label>
                    <input type="text" id="staticPseudo" value="{{ participant.nom }}" readonly>
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Téléphone : </label>
                    <input type="text" id="staticPseudo" value="{{ participant.telephone }}" readonly>
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Email : </label>
                    <input type="text" id="staticPseudo" value="{{ participant.mail }}" readonly>
                </div>
                <div class="pure-control-group">
                    <label for="staticPseudo">Ville de rattachement : </label>
                    <input type="text" id="staticPseudo" value="{{ participant.site }}" readonly>
                </div>
                <div class="pure-u-lg-1-2">
                    <a href="{{ path('sortie_liste') }}" class="pure-button pure-button-primary">Retour</a>

                </div>
            </div>
        </div>


    </form>


{% endblock %}