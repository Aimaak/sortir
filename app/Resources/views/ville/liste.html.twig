{% extends 'layout_pure.html.twig' %}


{% block maincontent %}
    {% for message in app.flashes("success") %}
        <div id="alert"><a class="alert-success" href="#alert">{{ message }}</a></div>
    {% endfor %}
    <h1>GÃ©rer les villes</h1>
    <br><br>
    <div class="pure-form pure-g">
    <div class="pure-u-lg-1-3">
        <img src="{{ asset('img/villes.png') }}" class="pure-img" alt="villes" id="villes">
    </div>
    <div class="pure-u-lg-2-3">
        <h5>Filtrer les villes</h5>

        <form class="pure-form pure-form-aligned" method="post">
            <label for="nom">Le nom contient : </label>
            <i class="fas fa-search"></i>
            <input type="search" onkeyup="rechercheNom()" class="pure-input-rounded" id="nom" name="nom"
                   placeholder="search">
            <br><br>
        </form>

        <table class="pure-table" id="tab">
            <thead>
            <tr class="pure-table-odd">
                <th>Ville</th>
                <th>Code postal</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for ville in villes %}
                <tr class="pure-table-odd">
                    <td>
                        {{ ville.nomVille }}
                    </td>
                    <td>
                        {{ ville.codePostal }}
                    </td>
                    <td>
                        <a href="{{ path('ville_modifier', {"id" : ville.id}) }}">Modifier</a> - <a
                                href="{{ path('ville_supprimer', {"id" : ville.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <form method="post">
                <tr class="pure-table-odd">
                    <td>
                        <input type="text" name="nomVille">
                    </td>
                    <td>
                        <input type="text" name="codePostal">
                    </td>
                    <td>
                        <input type="submit" class="submitSearch pure-button pure-button-primary" value="Ajouter">
                    </td>
                </tr>
            </form>
        </table>
    </div>


{% endblock %}