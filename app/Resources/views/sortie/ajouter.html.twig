{% extends 'layout.html.twig' %}

{% block recherche %}

{% endblock %}

{% block maincontent %}
    <header>
        <h2 align="center">Créer une sortie</h2>

        <br><br>
    </header>

    <form class="formSortie" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticSortie" class="col-sm-4 col-form-label">{{ form_label(form.nom) }} </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.nom) }}
                    </div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticVilleOrganisatrice" class="col-sm-4 col-form-label">Ville organisatrice : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.site) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticDateHeureSortie" class="col-sm-4 col-form-label">Date et heure de la sortie : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.datedebut) }}
                    </div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticVille" class="col-sm-4 col-form-label">Ville : </label>
                    <div class="col-sm-8">
                      {{ form_widget(form.lieu.ville) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticDateLimInscription" class="col-sm-4 col-form-label">Date limite d'inscription
                        : </label>
                    <div class="col-sm-8">
                       {{ form_widget(form.datecloture) }}
                    </div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticLieu" class="col-sm-4 col-form-label">Lieu : </label>
                    <div class="col-sm-8">
                      {{ form_widget(form.lieu.nomLieu) }}
                      {#<a href="{{ path('') }}">#}
                            {#<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>#}
                      {#</a>#}
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticNbPlaces" class="col-sm-4 col-form-label">Nombre de places : </label>
                    <div class="col-sm-8">
                       {{ form_widget(form.nbinscriptionsmax) }}
                    </div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticRue" class="col-sm-4 col-form-label">Rue : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.lieu.rue) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticDuree" class="col-sm-4 col-form-label">Durée : </label>
                    <div class="col-sm-8">
                       {{ form_widget(form.duree) }}
                    </div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticCP" class="col-sm-4 col-form-label">Code Postal : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.lieu.codePostal) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticDescription" class="col-sm-4 col-form-label">Description et infos : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.descriptioninfos) }}
                    </div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticLatitude" class="col-sm-4 col-form-label">Latitude : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.lieu.latitude) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <div class="form-group row">

                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="form-group row">
                    <label for="staticLongitude" class="col-sm-4 col-form-label">Longitude : </label>
                    <div class="col-sm-8">
                        {{ form_widget(form.lieu.longitude) }}
                    </div>
                </div>
            </div>
        </div>
    {{ form_row(form.enregistrer, {'attr' : {'class' : 'pure-button pure-button-primary btn-lg'}}) }}
    {{ form_row(form.Publier_la_sortie, {'attr' : {'class' : 'pure-button pure-button-primary btn-lg'}}) }}
    <a class="pure-button pure-button-primary btn-lg" href="{{ path('sortie_liste') }}">Annuler</a>
    </form>

    <div id="mapid"></div>

{% endblock %}

