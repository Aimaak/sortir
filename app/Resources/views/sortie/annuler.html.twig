{% extends 'layout_pure.html.twig' %}


{% block maincontent %}

    <h1>Annuler une sortie</h1>
    <br><br>
    <form method="post" class="pure-form pure-g">
        <div class="pure-u-lg-1-3">
        </div>

        <div class="pure-u-lg-1-3">
            <div class="pure-form pure-form-aligned">
                <div class="pure-control-group">
                    <label for="nom">Nom de la sortie : </label>
                    <input type="text" id="nom" value="{{ sortie.nom }}" readonly>
                </div>
                <div class="pure-control-group">
                    <label for="nom">Date de la sortie : </label>
                    <input type="text" id="nom" value="{{ sortie.datedebut|date('d/m/Y') }}" readonly>
                </div>
                <div class="pure-control-group">
                    <label for="nom">Ville organisatrice : </label>
                    <input type="text" id="nom" value="{{ sortie.site }}" readonly>
                </div>
                <div class="pure-control-group">
                    <label for="nom">Lieu : </label>
                    <input type="text" id="nom"
                           value="{{ sortie.lieu.nomLieu }}, {{ sortie.lieu.rue }} - {{ sortie.lieu.ville }}" readonly>
                </div>

                {#<div>#}
                {#<p>Nom de la sortie : {{ sortie.nom }}</p>#}
                {#<p>Date de la sortie : {{ sortie.datedebut|date('d/m/Y') }}</p>#}
                {#<p>Ville organisatrice : {{ sortie.site }}</p>#}
                {#<p>Lieu : {{ sortie.lieu.nomLieu }}, {{ sortie.lieu.rue }} - {{ sortie.lieu.ville }}</p>#}
                {#</div>#}
                <div class="pure-form">
                    {{ form_start(form) }}

                    {{ form_label(form.motif) }}
                    {{ form_widget(form.motif) }}
                    <br><br>
                    {{ form_row(form.enregistrer, {'attr' : {'class' : 'pure-button pure-button-primary'}}) }}
                    <br><br>
                    <a href="{{ path('sortie_liste') }}" class="pure-button pure-button-primary">Annuler</a>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </form>

{% endblock %}

