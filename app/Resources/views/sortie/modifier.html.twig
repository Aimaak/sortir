{% extends 'layout_pure.html.twig' %}


{% block recherche %}

{% endblock %}

{% block maincontent %}
    <header>
        <h2 align="center">Modifier la sortie</h2>
    </header>
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {{ form_start(form) }}
    {{ form_row(form.nom) }}
    {{ form_row(form.datedebut) }}
    {{ form_row(form.datecloture) }}
    {{ form_row(form.nbinscriptionsmax) }}
    {{ form_row(form.duree) }}
    {{ form_row(form.descriptioninfos) }}
    {{ form_row(form.site) }}
    {{ form_row(form.lieu) }}
    <div>
        {{ sortie.lieu.rue }}
    </div>
    <div>
        {{ sortie.lieu.ville.codepostal }}
    </div>
    {{ form_end(form) }}
    {{ form_row(form.enregistrer, {'attr' : {'class' : 'pure-button pure-button-primary'}}) }}
    {{ form_row(form.Publier_la_sortie, {'attr' : {'class' : 'pure-button pure-button-primary'}}) }}
    <a class="pure-button pure-button-primary" href="{{ path('sortie_supprimer', {"id": sortie.id}) }}">Supprimer</a>
    <a class="pure-button pure-button-primary" href="{{ path('sortie_liste') }}">Annuler</a>


{% endblock %}

