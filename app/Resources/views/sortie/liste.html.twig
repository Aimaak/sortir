{% extends "layout.html.twig" %}

{% block maincontent %}
    {% for message in app.flashes("success") %}
        <div id="alert"><a class="alert-success" href="#alert">{{ message }}</a></div>
    {% endfor %}
    <div class="pure-g">
        <div class="pure-u-2-3"></div>
        <div class="pure-u-1-3">
            <h4>Date du jour : {{ "now"|date("d/m/Y") }}</h4>
            <h4>Participant : {{ app.user.prenom }} {{ app.user.nom }}</h4>
        </div>

    </div>
    <h5>Filtrer les sorties</h5>
    <form class="pure-form pure-g" method="post">
        <div class="pure-control-group pure-u-1-3">
            <label for="site">Site :
                <select class="pure-input-1" name="site" id="site">
                    {% for site in sites %}
                        <option>
                            {{ site.nomSite }}
                        </option>
                    {% endfor %}
                </select>
            </label>

            <label for="nomSortie">Le nom de la sortie contient : <input type="search" class="pure-input-1"
                                                                         id="nomSortie" name="nomSortie"></label>
            <label for="dateDebut">Entre : <input type="date" class="pure-input-1" id="dateDebut"
                                                  name="dateDebut"></label>
            <label for="dateFin">et : <input type="date" class="pure-input-1" id="dateFin" name="dateFin"></label>

        </div>
        <div class="pure-control-group pure-u-1-3">
            <label for="filtres1" class="pure-checkbox">Sorties dont je suis l'organisateur/trice<input type="checkbox" id="filtres1" onclick=""></label>
            <label for="filtres2" class="pure-checkbox">Sorties auxquelles je suis inscrit/e<input type="checkbox" id="filtres2" onclick=""></label>
            <label for="filtres3" class="pure-checkbox">Sorties auxquelles je ne suis pas inscrit/e<input type="checkbox" id="filtres3" onclick=""></label>
            <label for="filtres4" class="pure-checkbox">Sorties passées<input type="checkbox" id="filtres4" onclick=""></label>

        </div>
        <div class="pure-control-group pure-u-1-3">
            <input type="submit" class="pure-button pure-button-primary" value="Rechercher">
        </div>
    </form>
{% endblock %}

{% block recherche %}
    <table class="pure-table">
        <thead>
        <tr>
            <th>Nom de la sortie</th>
            <th>Date de la sortie</th>
            <th>Clôture</th>
            <th>Inscrits/places</th>
            <th>État</th>
            <th>Inscrit</th>
            <th>Organisateur</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr class="pure-table-odd">
                <td>
                    {{ sortie.nom }}
                </td>
                <td>
                    {{ sortie.datedebut|date('d/m/Y H\\Hi') }}
                </td>
                <td>
                    {{ sortie.datecloture|date('d/m/Y') }}
                </td>
                <td>
                    {{ sortie.nbinscriptionsmax }}
                </td>
                <td>
                    {{ sortie.etat }}
                </td>
                <td>

                </td>
                <td>
                    <a href="{{ path('profil_participant', {'id': sortie.organisateur.id}) }}">{{ sortie.organisateur }}</a>
                </td>
                <td>
                    <a href="{{ path('sortie_detailSortie', {"id": sortie.id}) }}">Afficher</a>
                    <a href="{{ path('sortie_modifierSortie', {"id": sortie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('sortie_creerSortie') }}"><input type="submit" class="pure-button pure-button-primary" value="Créer une sortie"></a>
{% endblock %}